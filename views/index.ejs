<!-- The header ejs template is included to ensure our CSS and fonts are loaded -->
<%- include('partials/header') %>
    <main class="main-content index_container">
        <h1>Welcome to the Math Competition App</h1>

        <p>Your current streak: <%= streak %></p>
        <% if (streak === 0) { %>
            <p>No current streak. Try to start a new quiz and build your streak!</p>
        <% } %>
        
        <div class="navigation__container">
            <a href="/leaderboards">
                View Leaderboards
            </a>
            <a href="/quiz">
                Start Quiz
            </a>
        </div>
    </main>
</body>
</html>
